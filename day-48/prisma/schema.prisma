generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql" 
}

model User {
  id  Int   @default(autoincrement())  @id
  username  String @unique
  password  String
  age Int  
  city String
}

model Todo {
  id           Int        @default(autoincrement()) @id
  title        String
  description  String
  done         Boolean
  userId       Int
  time         DateTime   @default(now())
}